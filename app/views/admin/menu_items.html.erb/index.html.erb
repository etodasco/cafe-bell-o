<!-- app/views/admin/menu_items/index.html.erb -->
<h1>Menu Items</h1>
<%= link_to "Add New Menu Item", new_admin_menu_item_path, class: "btn btn-primary" %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Category</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @menu_items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= item.category %></td>
        <td>
          <%= link_to 'Edit', edit_admin_menu_item_path(item), class: 'btn btn-warning' %>
          <%= link_to 'Delete', admin_menu_item_path(item), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
