<h1>Edit Menu Item</h1>

<%= form_with model: @menu_item, url: admin_menu_item_path(@menu_item), method: :patch, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :category %>
    <%= form.text_field :category, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :day %>
    <%= form.text_field :day, class: "form-control" %>
  </div>

  <%= form.submit "Update Menu Item", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back', admin_menu_items_path, class: "btn btn-secondary" %>
