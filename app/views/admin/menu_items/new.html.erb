<div class="text-center mt-2 mb-4">
  <h1>Create New Menu Item</h1>
</div>

<div class="card shadow-sm mb-4" style="max-width: 600px; margin: auto;">
  <div class="card-body">
    <%= form_with model: @menu_item, url: admin_menu_items_path, local: true do |f| %>
      <% if @menu_item.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h2><%= pluralize(@menu_item.errors.count, "error") %> prohibited this menu item from being saved:</h2>
          <ul>
            <% @menu_item.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group mb-3">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :price, class: "form-label" %>
        <%= f.number_field :price, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :day, class: "form-label" %>
        <%= f.text_field :day, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :category, class: "form-label" %>
        <%= f.text_field :category, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :image, class: "form-label" %>
        <%= f.file_field :image, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.submit "Create Menu Item", class: "btn btn-primary w-100" %>
      </div>
    <% end %>

    <div class="form-group">
      <%= link_to 'Back to Menu Items', admin_menu_items_path, class: "btn btn-secondary w-100" %>
    </div>
  </div>
</div>
