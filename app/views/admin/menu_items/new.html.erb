<div class="text-center mt-2 mb-4">
  <h1>Créer un nouvel élément de menu</h1>
</div>

<div class="card shadow-sm mb-4" style="max-width: 600px; margin: auto;">
  <div class="card-body">
    <%= form_with model: @menu_item, url: menu_items_path, local: true do |f| %>
      <% if @menu_item.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h2><%= pluralize(@menu_item.errors.count, "error") %> prohibited this menu item from being saved:</h2>
          <ul>
            <% @menu_item.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group mb-3">
        <%= f.label :category, class: "form-label" %>
        <%= f.select :category, 
              options_for_select(["Spéciale du Jour", "Dîner", "Déssert"]),
              { prompt: "Choisissez une catégorie" }, 
              class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :noms, class: "form-label" %>
        <%= f.text_field :name, placeholder: "ex. Nom de l'item", class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, placeholder: "ex. Pain italien, poulet, laitue, tomate", class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :prix, class: "form-label" %>
        <%= f.number_field :price, placeholder: "ex. 19.95", step: 0.01, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :jour, class: "form-label" %>
        <%= f.text_field :day, placeholder: "Lundi, Mardi, Mercredi, Jeudi, Vendredi, Samedi, Dimanche", class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.submit "Créer nouvel élément", class: "btn btn-primary w-100" %>
      </div>
    <% end %>

    <div class="form-group">
      <%= link_to 'Retour au menu', menu_items_path, class: "btn btn-secondary w-100" %>
    </div>
  </div>
</div>
