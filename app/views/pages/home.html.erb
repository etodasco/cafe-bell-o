<%# Todays special %>
<div class="album py-5 bg-body-tertiary">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-6">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="text-muted text-center">
              <%= I18n.l(Time.current, format: :long).split.map(&:capitalize).join(' ') %>
              <p> Sp√©cial du jour </p>
            </h5>

            <% if @menu_item_for_today.present? %>
              <h6 class="card-title text-center"><%= @menu_item_for_today.name %></h6>
              <p class="card-text text-center"><%= @menu_item_for_today.description %></p>
              <h6 class="text-danger fw-bold text-center">$<%= @menu_item_for_today.price %></h6>
            <% else %>
              <p class="text-center">Pas de special pour aujhour'dui.</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container my-5">
  <div id="sandwichCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <div class="row">
          <div class="col-md-6">
            <%= image_tag "sandwhich1.jpg", class: "d-block sandwich", alt: "Sandwich 1" %>
          </div>
          <div class="col-md-6">
            <%= image_tag "sandwhich2.jpg", class: "d-block sandwich", alt: "Sandwich 2" %>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <div class="row">
          <div class="col-md-6">
            <%= image_tag "sandwhich3.jpg", class: "d-block sandwich", alt: "Sandwich 3" %>
          </div>
          <div class="col-md-6">
            <%= image_tag "sandwhich1.jpg", class: "d-block sandwich", alt: "Sandwich 4" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Carousel Controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#sandwichCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#sandwichCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </button>
  </div>
</div>

