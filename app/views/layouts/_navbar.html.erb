<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="<%= root_path %>">
      Cafe Bell-O
    </a>
    
    <!-- Navbar Toggler for smaller screens -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar Links (Collapsed on smaller screens) -->
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto"> <!-- "ms-auto" for auto margin start to push to the right -->
        <li class="nav-item">
          <%= link_to "Accueil", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Menu", menu_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Contact", contact_path, class: "nav-link" %>
        </li>

        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li class="nav-item">
              <%= link_to "Console Admin", dashboard_path, class: "nav-link" %>
            </li>
          <% end %>

          <!-- Sign Out link (Only visible when signed in) -->
          <li class="nav-item">
            <%= button_to destroy_user_session_path, method: :delete, class: "nav-link" do %>
              Déconnecter
            <% end %>
          </li>
        <% else %>
          <!-- Sign In link (Only visible when not signed in) -->
          <li class="nav-item">
            <%= link_to "Propriétaire", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
