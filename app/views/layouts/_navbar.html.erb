<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid d-flex align-items-center">
    <a class="navbar-brand d-flex align-items-center" href="<%= root_path %>">
      <%= image_tag "", alt: "Cafe Bell-O", class: "logo-img me-2" %>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to "Accueil", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Menu", menu_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Contact", contact_path, class: "nav-link" %>
        </li>

        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li class="nav-item">
              <%= link_to "Admin Console", admin_root_path, class: "nav-link" %>
            </li>
          <% end %>

          <!-- Sign Out link (Only visible when signed in) -->
          <li class="nav-item">
            <%= button_to destroy_user_session_path, method: :delete, class: "nav-link" do %>
              Déconnecter
            <% end %>
          </li>
        <% else %>
          <!-- Sign In link (Only visible when not signed in) -->
          <li class="nav-item">
            <%= link_to "Propriétaire", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
